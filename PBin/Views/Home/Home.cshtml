@model PBin.Models.ViewModels.HomeViewModel
@{ 
    ViewBag.Title = "Home";
}
<div class="row">
    @for (int i = 0; i < Model.Posts.Count(); i++)
    {
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>@Model.Posts[i].Title</h1>
                </div>
                <div class="panel-body">
                    <p>@Model.Posts[i].Content</p>
                </div>
            </div>                
        </div>
    }

</div>