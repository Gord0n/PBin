@{  
    ViewBag.Title = "Login";
}   
 <div class="row">
        <div class="col-sm-offset-2 col-xs-8 col-xs-offset-2 col-lg-offset-3 col-lg-6">
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @id = "LoginForm", enctype = "multipart-form-data" }))
            {
                <div class="input-group">
                    <span class="input-group-addon">User Name</span>
                    <input type="text" id="Email" value="" name="Email" class="form-control" />
                </div>
                <div class="input-group">
                    <span class="input-group-addon">Password</span>
                    <input type="password" id="Password" name="Password" class="form-control" />
                </div>
                <div class="input-group">
                    <span class="input-group-addon text-left" style="width:100%; color: red;"></span>
                    <div class="input-group-btn">
                        <button type="submit" class="btn btn-primary">Log In</button>
                    </div>
                </div>
            }            
        </div>
    </div>